{
  "name": "sldsa-slack-apps",
  "version": "1.0.0",
  "description": "Official SLDSA Slack Bot",
  "main": "src",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "lint": "eslint 'src/**/*.js'",
    "dev": "nodemon -- index.js",
    "dev:silent": "nodemon -- index.js -s"
  },
  "dependencies": {
    "@slack/bolt": "^3.17.1"
  },
  "devDependencies": {
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "esm": "^3.2.25",
    "nodemon": "^3.1.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.js",
      "node_modules"
    ],
    "watch": [
      ".env",
      "src"
    ],
    "delay": 2500
  }
}
